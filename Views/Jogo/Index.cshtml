@model List<JogoModel>

@{
    ViewData["Title"] = "Jogos";
}

<h1 class="h1-list-pag">Game List</h1>

<body class="backgroud-jogos">
    <div>                                <!--abrir modal-->
        <a class="btn btn-outline-primary btn-jogo-create" href="javascript:">New Game</a>
        <main>
            <section>
                <article>
                    <br>
                    <!----------------------------------------------TABLE Index----------------------------------------------------------->
                    <table class="table table-primary" id="minha-tabela">
                    <thead>
                        <tr>
                            <th scope="col">Title</th>
                            <th scope="col">Gender</th>
                            <th scope="col">Developer</th>
                            <th scope="col">Launch</th>
                            <th scope="col">Evaluation</th>
                            <th></th>
                        </tr>
                    </thead>
                        <tbody>
                            @if(Model != null && Model.Any())
                            {
                                @foreach(var item in Model)
                                {
                                    <tr class="table-dark">
                                        <td>@item.Titulo</td>
                                        <td>@item.Genero</td>
                                        <td>@item.Desenvolvedora</td>
                                        <td>@item.DataLancamento.ToString("dd/MM/yyyy")</td>
                                        <td>@item.Avaliacao</td>
                                        <td>
                                            <div class="btn-group" role="group" aria-label="Basic outlined example">
                                                <button role="button" class="btn btn-outline-primary btn-modal-edit" data-toggle="modal" data-target="#modalEdit" data-id="@item.Id" data-url="@Url.Action("Edit", "Jogo")">Edit</button>
                                                <button role="button" class="btn btn-outline-primary btn-modal-delete" data-toggle="modal" data-target="#modalDelete" data-id="@item.Id" data-url="@Url.Action("Delete", "Jogo")">Delete</button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                    <!----------------------------------------------TABLE Index----------------------------------------------------------->
                    <!----------------------------------------------MODAL Create---------------------------------------------------------->
                    <div id="jogo-create" class="modal" tabindex="-1">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">New Game</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                            <div class="modal-body">

                                <form asp-controller="Jogo" asp-action="Create" method="post">
                                    
                                    <fieldset>
                                                <div class="row">
                                                    <label for="staticEmail" class="col-sm-2 col-form-label">Title:</label>
                                                    <div class="col-sm-10">
                                                        <input type="text" class="form-control" id="create_titulo" name="Create_Titulo" placeholder="Title game">
                                                    </div>
                                                </div>
                                                <br>
                                                <div class="row">
                                                    <label for="" class="col-sm-2 col-form-label">Gender:</label>
                                                    <div class="col-sm-10">
                                                        <input type="text" class="form-control" id="create_genero" name="Create_Genero" placeholder="Gender">

                                                    </div>
                                                </div>
                                                <br>
                                                <div class="row">
                                                    <label for="staticEmail" class="col-sm-2 col-form-label">Developer:</label>
                                                    <div class="col-sm-10">
                                                        <input type="text" class="form-control" id="create_desenvolvedora" name="Create_Desenvolvedora" placeholder="Developer">

                                                    </div>
                                                </div>
                                                <br>
                                                <div class="row">
                                                    <label for="staticEmail" class="col-sm-2 col-form-label">Launch:</label>
                                                    <div class="col-sm-6">
                                                        <input type="date" class="form-control" id="create_dataLancamento" name="Create_DataLancamento" placeholder="Launch">

                                                    </div>
                                                </div>
                                                <br>
                                                <div>
                                                    <div class="row">
                                                        <label for="" class="col-sm-2 col-form-label">Evaluation:</label>
                                                        <div class="col-sm-4">
                                                            <select class="form-select col-sm-4" id="create_avaliacao" name="Create_Avaliacao" aria-placeholder="Avaliação">
                                                                <option value="1">evaluation note: 1</option>
                                                                <option value="2">evaluation note: 2</option>
                                                                <option value="3">evaluation note: 3</option>
                                                                <option value="4">evaluation note: 4</option>
                                                                <option value="5">evaluation note: 5</option>
                                                                <option value="6">evaluation note: 6</option>
                                                                <option value="7">evaluation note: 7</option>
                                                                <option value="8">evaluation note: 8</option>
                                                                <option value="9">evaluation note: 9</option>
                                                                <option value="10">evaluation note: 10</option>
                                                            </select>

                                                        </div>
                                                    </div>
                                                </div>
                                                <br>
                                                <div>
                                                    <button type="submit" class="btn btn-outline-primary botao-sunmit-jogo">Save</button>
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                </div>

                                    </fieldset>
                                </form>

                            </div>
                                <div class="modal-footer">
                                <!--<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>-->
                                </div>
                            </div>
                        </div>
                    </div>
                    <!----------------------------------------------MODAL Create------------------------------------------------------------>
                    <!----------------------------------------------MODAL Edit-------------------------------------------------------------->

                     <div id="modalEdit" class="modal" tabindex="-1">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Edit Game</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                            <div class="modal-body">

                                <form asp-controller="Jogo" asp-action="Edit" method="post">
                                    
                                    <fieldset>
                                        <input type="hidden" name="Id" id="id" />
                                        <div class="row">
                                            <label for="staticEmail" class="col-sm-2 col-form-label">Title:</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" id="titulo" name="Titulo"  placeholder="Title game">
                                            </div>
                                        </div>
                                        <br>
                                        <div class="row">
                                            <label for="" class="col-sm-2 col-form-label">Gender:</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" id="genero" name="Genero"  placeholder="Gender">
                                            </div>
                                        </div>
                                        <br>
                                        <div class="row">
                                            <label for="staticEmail" class="col-sm-2 col-form-label">Developer:</label>
                                            <div class="col-sm-10">
                                                <input type="text" class="form-control" id="desenvolvedora" name="Desenvolvedora"  placeholder="Developer">
                                            </div>
                                        </div>
                                        <br>
                                        <div class="row">
                                            <label for="staticEmail" class="col-sm-2 col-form-label">Launch:</label>
                                            <div class="col-sm-6">
                                                <input type="date" class="form-control" id="dataLancamento" name="DataLancamento" placeholder="Launch">
                                            </div>
                                        </div>
                                        <br>
                                        <div>
                                            <div class="row">
                                                <label for="" class="col-sm-2 col-form-label">Evaluation:</label>
                                                <div class="col-sm-4">
                                                    <select class="form-select col-sm-4" id="avaliacao" name="Avaliacao" aria-placeholder="Avaliação">
                                                        <option value="1">evaluation note: 1</option>
                                                        <option value="2">evaluation note: 2</option>
                                                        <option value="3">evaluation note: 3</option>
                                                        <option value="4">evaluation note: 4</option>
                                                        <option value="5">evaluation note: 5</option>
                                                        <option value="6">evaluation note: 6</option>
                                                        <option value="7">evaluation note: 7</option>
                                                        <option value="8">evaluation note: 8</option>
                                                        <option value="9">evaluation note: 9</option>
                                                        <option value="10">evaluation note: 10</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <br>
                                        <div>
                                        <button type="submit" class="btn btn-outline-primary botao-sunmit-jogo">Save</button>
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        </div>   
                                    </fieldset>
                                </form>
                            </div>
                                <div class="modal-footer">
                                <!--<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>-->
                                </div>
                            </div>
                        </div>
                    </div>
                    <!----------------------------------------------MODAL Edit-------------------------------------------------------------->
                    <!----------------------------------------------MODAL delete-------------------------------------------------------------->
                    <div id="modalDelete" class="modal" tabindex="-1">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Delete Game</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <p>Are you sure you want to delete <span name="Titulo" id="titulo"></p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button id="confirmDelete" type="button" class="btn btn-danger">Delete</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!----------------------------------------------MODAL delete-------------------------------------------------------------->
                    <!----------------------------------------------CARDS-------------------------------------------------------------->
                    <br>
                    <br>
                    <div class="row">
                        <div class="col-sm-4">
                            <div class="card text-white bg-primary mb-3" style="max-width: 20rem;">
                                <div class="card-header">Currículo de Desenvolvedor</div>
                                    <div class="card-body">
                                        <h4 class="card-title">Currículo de Desenvolvedor</h4>
                                        <p class="card-text"> Sou um desenvolvedor .NET altamente motivado com 
                                            mais de 3 anos de experiência no desenvolvimento de aplicativos web e desktop.
                                            Tenho experiência extensiva em C#, ASP.NET, MVC, DApper e Entity Framework e SQL Server,
                                            entregando soluções eficientes e de alta qualidade para clientes em diversos setores.
                                        </p>
                                        <ul class="card-text">
                                            <li>Desenvolvimento em C# e .NET Framework</li>
                                            <li>Criação e manutenção de aplicações web utilizando ASP.NET MVC</li>
                                            <li>Experiência sólida em Dapper Entity Framework para acesso a dados</li>
                                            <li>Banco de Dados: SQL Server, MySQL</li>
                                            <li>Conhecimento em HTML, CSS, JavaScript</li>
                                        </ul>
                                        <p>Click aqui para acessar meu <a asp-controller="Curriculo" asp-action="Index">currículo</a></p>
                                    </div>
                            </div>
                        </div>

                        <div class="col-sm-4">
                            <div class="card text-white bg-primary mb-3" style="max-width: 20rem;">
                                <div class="card-header">Jogados</div>
                                    <div class="card-body">
                                        <h4 class="card-title">Confira minha Lista de Jogos!</h4>
                                        <p class="card-text">Quer saber quais jogos já explorei? Clique para conferir minha lista completa e descubra minhas aventuras virtuais!
                                        </p>
                                        <p>Click aqui para acessar minha lista de <a asp-controller="Jogo" asp-action="Index">jogos.</a></p>
                                    </div>
                            </div>
                        </div>

                        <div class="col-sm-4">
                            <div class="card text-white bg-primary mb-3" style="max-width: 20rem;">
                                <div class="card-header">Filmes</div>
                                    <div class="card-body">
                                        <h4 class="card-title">Confira minha Lista de Filmes!</h4>
                                        <p class="card-text">Curte filmes tanto quanto eu? Clique no link abaixo para explorar minha lista de filmes favoritos e descubra novas histórias para se apaixonar!</p>
                                        <a asp-controller="Filme" asp-action="Index" >Ver Lista de Filmes</a>
                                    </div>
                            </div>
                        </div> 
                    </div>  

                </article>
            </section>
        </main>
    </div>
</body>